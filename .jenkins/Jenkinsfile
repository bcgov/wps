pipeline {
    agent none
    environment {
        // Pipeline-wide vars
        name =  "wps-web"
        ver = "0.0.1"
        projTools = "auzhsi-tools"
        projDev = "auzhsi-dev"
        projProd = "auzhsi-prod"
        suffix = "pr-${env.CHANGE_ID}"
        rcToken="https://chat.pathfinder.gov.bc.ca/hooks/7A8RwSpZPDAqc6uXS/z8nRXX43oifYWELkwJKeLj4e86rtyfvtJdqdvjSE3XoK2sri"
    }
    options {
        disableResume()
    }
    stages {
        stage('Startup') {
            agent { label 'build' }
            steps {
                echo "Aborting all running jobs ..."
                script {
                    abortAllPreviousBuildInProgress(currentBuild)
                }
            }
        }
        // stage('Build') {
        //     agent { label 'build' }
        //     steps {
        //         script {
        //             sh "GIT_BRANCH=${env.CHANGE_BRANCH} ./openshift/scripts/oc_build.sh ${suffix} apply"
        //         }
        //     }
        // }
        // stage('Deploy (DEV)') {
        //     agent { label 'deploy' }
        //     steps {
        //         script {
        //             sh "./openshift/scripts/oc_deploy.sh ${suffix} apply"
        //         }
        //     }
        // }
        stage('Promote (PROD)') {
            agent { label 'deploy' }
            input {
                message "Should we promote this deployment to PRODUCTION?"
                ok "Yes!"
            }
            steps {
                script {
                    sh "./openshift/scripts/oc_promote.sh ${suffix} apply"
                }
            }
        }
        stage('Deploy (PROD)') {
            agent { label 'deploy' }
            steps {
                script {
                    sh "CPU_REQUEST=1000m CPU_LIMIT=1000m MEMORY_REQUEST=2Gi MEMORY_LIMIT=2Gi REPLICAS=3 PROJ_TARGET=${projProd} ./openshift/scripts/oc_deploy.sh prod apply"
                }
            }
        }
        stage('Cleanup') {
            agent { label 'deploy' }
            steps {
                script {
                    sh "./openshift/scripts/oc_cleanup.sh ${suffix} apply"
                }
            }
        }
    }
}