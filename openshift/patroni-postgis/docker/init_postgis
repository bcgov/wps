
if [[ (! -z "$APP_USER") &&  (! -z "$APP_PASSWORD") && (! -z "$APP_DATABASE")]]; then
    echo "Loading PostGIS extensions into $APP_DATABASE"
    psql "$1" -w -c "\c ${APP_DATABASE}" -c "CREATE EXTENSION IF NOT EXISTS postgis;"
fi

pgbackrest --config=/home/pgbackrest/pgbackrest.conf --pg1-path=/home/postgres/pgdata/pgroot/data --pg1-user=$APP_USER --pg-database=$APP_DATABASE --stanza=demo-cluster-1 --log-path=/home/pgbackrest/log stanza-create